<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,150" TextWrapping="Wrap" Width="320" ><Run Text="Select a message option and then click the &quot;Display&quot; button"/><LineBreak/><Run/></TextBlock>
        <RadioButton x:Name="radioButton" Content="Hello" HorizontalAlignment="Left" Margin="169,141,0,0" VerticalAlignment="Top" />
        <RadioButton x:Name="radioButton2" Content="Goodbye" HorizontalAlignment="Left" Margin="302,141,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button1" Content="Display" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
    </Grid>
</Window>
